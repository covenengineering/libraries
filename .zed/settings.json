{
	"format_on_save": "on",
	"formatter": [
		{
			"code_action": "source.organizeImports"
		},
		"language_server"
	],
	"lsp": {
		"deno": {
			"settings": {
				"deno": {
					"enable": true
				}
			}
		}
	},
	"languages": {
		"JavaScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		},
		"TypeScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		},
		"TSX": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		}
	}
}
