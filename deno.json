		"test-coverage": "deno test --allow-env=NODE_ENV --coverage --doc --import=./tests/utils/setupTests.ts --parallel --quiet"
	},
	"workspace": [
		"./@coven/compare",
		"./@coven/constants",
		"./@coven/cron",
		"./@coven/expression",
		"./@coven/iterables",
		"./@coven/math",
