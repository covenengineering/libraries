{
	"compilerOptions": {
		"exactOptionalPropertyTypes": true,
		"jsxFactory": "createElement",
		"jsxFragmentFactory": "Fragment",
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedParameters": true,
		"strict": true
	},
	"exclude": ["coverage"],
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.11",
		"@types/react": "npm:@types/react@^19.0.11",
		"@types/react-dom": "npm:@types/react-dom@^19.0.4",
		"linkedom": "npm:linkedom@^0.18.9",
		"preact": "npm:preact@^10.26.4",
		"preact-render-to-string": "npm:preact-render-to-string@^6.5.13",
		"prettier": "npm:prettier@^3.5.3",
		"react": "npm:react@^19.0.0",
		"react-dom": "npm:react-dom@^19.0.0"
	},
	"lint": {
		"rules": {
			"include": [
				"ban-untagged-todo",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"guard-for-in",
				"no-await-in-loop",
				"no-boolean-literal-for-arguments",
				"no-console",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-implicit-declare-namespace-export",
				"no-inferrable-types",
				"no-non-null-asserted-optional-chain",
				"no-non-null-assertion",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-top-level-await",
				"no-useless-rename",
				"single-var-declarator",
				"triple-slash-reference"
			],
			"tags": ["jsr", "jsx", "react", "recommended"]
		}
	},
	"nodeModulesDir": "auto",
	"tasks": {
		"format": "deno run --allow-env --allow-read --allow-write --allow-sys npm:prettier --log-level=warn --write './**/*.{json,md,ts,tsx}'",
		"format-check": "deno run --allow-env --allow-read --allow-sys npm:prettier --check './**/*.{json,md,ts,tsx}'",
		"lint-docs": "deno doc --lint ./@coven/**/*.ts ./@simulcast/**/*.ts",
		"test": "deno test --parallel",
		"test-coverage": "deno test --coverage --doc --parallel --quiet"
	},
	"workspace": [
		"./@coven/compare",
		"./@coven/constants",
		"./@coven/cron",
		"./@coven/expression",
		"./@coven/iterables",
		"./@coven/math",
		"./@coven/memo",
		"./@coven/pair",
		"./@coven/parsers",
		"./@coven/predicates",
		"./@coven/terminal",
		"./@coven/types",
		"./@coven/utils",
		"./@simulcast/core",
		"./@simulcast/preact",
		"./@simulcast/react"
	]
}
